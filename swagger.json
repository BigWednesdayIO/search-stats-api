{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Search Statistics API"
    },
    "basePath": "/1",
    "paths": {
        "/stats/query_count": {
            "get": {
                "description": "Gets search query counts",
                "responses": {
                    "200": {
                        "description": "An object containing search query counts",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "counts": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "count": {
                                                "type": "integer"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "time_unit",
                        "in": "query",
                        "required": true,
                        "description": "Time unit for count buckets",
                        "type": "string",
                        "enum": ["days"]
                    },
                    {
                        "name": "buckets",
                        "in": "query",
                        "required": true,
                        "description": "Number of buckets",
                        "type": "integer"
                    }
                ]
            }
        }
    },
    "definitions": {}
}
